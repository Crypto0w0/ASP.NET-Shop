@model ASP.Models.Product

@{
    ViewData["Title"] = "Додати товар";
    var lastProduct = ViewBag.LastProduct as ASP.Models.Product;
}

<h2>Додати товар</h2>

<form asp-action="Add" method="post" enctype="multipart/form-data">
    <div>
        <label>Назва:</label><br />
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div>
        <label>Опис:</label><br />
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div>
        <label>Ціна:</label><br />
        <input asp-for="Price" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div>
        <label>Кількість на складі:</label><br />
        <input asp-for="Stock" type="number" class="form-control" />
        <span asp-validation-for="Stock" class="text-danger"></span>
    </div>
    <div>
        <label>Фото:</label><br />
        <input type="file" name="imageFile" class="form-control" accept="image/*" />
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Зберегти</button>
</form>

<hr />

@if (lastProduct != null)
{
    <h4>Останній доданий товар:</h4>
    <p><strong>Назва:</strong> @lastProduct.Name</p>
    <p><strong>Опис:</strong> @lastProduct.Description</p>
    <p><strong>Ціна:</strong> @lastProduct.Price грн</p>
    <p><strong>Кількість:</strong> @lastProduct.Stock шт</p>

    @if (!string.IsNullOrEmpty(lastProduct.ImagePath))
    {
        <img src="@lastProduct.ImagePath" alt="Фото товару" style="max-width: 300px; margin-top: 10px;" />
    }
}
else
{
    <p>Немає попередніх даних.</p>
}
