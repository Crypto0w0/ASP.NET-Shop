@{
    var userName = Context.Session.GetString("UserName");
    var userEmail = Context.Session.GetString("UserEmail");
    bool isLoggedIn = !string.IsNullOrEmpty(userEmail);
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ASP</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ASP.styles.css" asp-append-version="true" />

    <style>
        .product-card {
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 15px;
            margin: 10px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            transition: transform 0.2s ease-in-out;
            background-color: #fff;
        }

            .product-card:hover {
                transform: scale(1.02);
            }

        .product-image {
            width: 100%;
            max-height: 200px;
            object-fit: cover;
            border-radius: 6px;
            margin-bottom: 10px;
        }

        .product-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
            gap: 20px;
        }

        .product-title {
            font-weight: bold;
            font-size: 1.2em;
            margin-bottom: 5px;
        }

        .product-price {
            color: #28a745;
            font-weight: bold;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">MySite</a>

                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav ms-auto">
                        @if (isLoggedIn)
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/Account/Profile">
                                    👤 @userName
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-danger" href="/Account/Logout">
                                    Вийти
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/Account/Login">Увійти</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Account/Register">Реєстрація</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="text-center p-3 bg-light mt-4 border-top">
        @{
            var name = Context.Session.GetString("UserName") ?? "гість";
            var email = Context.Session.GetString("UserEmail") ?? "";
        }

        <small>
            &copy; 2024; авторизовано для: <strong>@name</strong> (@email)
        </small>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
